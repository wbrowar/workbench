<% const attributes = c.attributes || '',
         classes = (c.classes || false) ? ` ${ c.classes }` : '',
         alt = c.alt || '',
         placeholder = c.placeholder || 'data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==',
         sizes = c.sizes || '100vw',
         srcset = c.srcset || '',
         webpSrcset = c.webpSrcset || false;
%>

<figure class="c_image<%- classes %>" <%- attributes %>>
    <picture>
        <% if (webpSrcset) { %><source type="image/webp" data-lazy-load data-srcset="<%- webpSrcset %>">
        <% } %><img data-lazy-load src="<%- placeholder %>"
             sizes="100vw"
             alt="<%= alt %>"
             data-srcset="<%- srcset %>">
    </picture>
</figure>